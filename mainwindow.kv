<RoundedButton@Button>:
    background_color: 0, 0, 0, 0  # Set the background color to transparent
    background_normal:''
    color : (1,1,1,1)
    bold:True
    canvas.before:
        Color:
            #rgba: .5, 0.5, 0.5, 1  # Set the button color
            rgba: 138/255, 43/255, 226/255,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,] * 4  # Set the corner radius (10 pixels in this example)

                
