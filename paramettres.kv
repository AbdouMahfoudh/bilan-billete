#:kivy 2.1.0
<Paramettres>:
    name: "second"
    GridLayout :
        #orientation : "vertical"
        size : root.width, root.height
        spacing : 1
        cols : 1
        background_color: (189/255, 189/255, 185/255,1)
        canvas.before :
            Color :
                rgba : self.background_color
            Rectangle :
                size : self.size
                pos : self.pos
        BoxLayout:
            orientation: 
            #size_hint : (None, None)
            height : 80
            width : root.width
            background_color: (0/255, 189/255, 185/255,1)
            canvas.before :
                Color :
                    rgba : self.background_color
                Rectangle :
                    size : self.size
                    pos : self.pos
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            Label:
                text : "Paramettres"
                font_size : 50
                bold : True
                
                #pos_hint : {'center_x' : 0.5, 'y':0}
                
            Button:
                size_hint:(.2, .7)
                pos_hint : {'x':0, 'y':.1}
                background_normal:''
                background_color: (0/255, 175/255, 175/255,1)
                on_release : app.root.current = "main"
                Image:
                    source:"images/rt4.png"
                    center_x : self.parent.center_x
                    center_y : self.parent.center_y
                    size_hint:(.2, .7)
                    size : (50, 50)
        BoxLayout:
            orientation: "vertical"
            spacing : 4
            padding : 10
            size_hint:(1, 3.5)
            Button:
                text: "Langue"
                font_size : 25
                bold : True
                color : (0,0,0,1)
                background_normal:''
                background_color: (185/255, 185/255, 185/255, 1)
            Button:
                text: "Instructions"
                font_size : 25
                bold : True
                color : (0,0,0,1)
                background_normal:''
                background_color: (185/255, 185/255, 185/255, 1)
                on_release : app.root.current="instructions"
            Button:
                text: "Historique"
                font_size : 25
                bold : True
                color : (0,0,0,1)
                background_normal:''
                background_color: (185/255, 185/255, 185/255, 1)
                #on_press : app.hist()
                on_release : app.hist()
            Button:
                text: "Changer Les Groupes"
                font_size : 25
                bold : True
                color : (0,0,0,1)
                background_normal:''
                background_color: (185/255, 185/255, 185/255, 1)
                #on_press : app.hist()
                on_release : app.root.current="users"
            Button:
                text: "Le Mode de jeu"
                font_size : 25
                bold : True
                color : (0,0,0,1)
                background_normal:''
                background_color: (185/255, 185/255, 185/255, 1)
                on_release : app.mode1()
                #on_release : app.root.current="mode"
            
        
            
        BoxLayout:
            orientation:
        BoxLayout:
            orientation:
        BoxLayout:
            orientation:
